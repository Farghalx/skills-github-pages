{
  "name": "farghal-x-website-tests",
  "version": "1.0.0",
  "description": "Test suite for Farghal X static website",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:html": "node tests/html-validation.test.js",
    "test:links": "node tests/link-checker.test.js",
    "test:all": "npm run test && npm run test:html && npm run test:links"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "tests/**/*.js",
      "!tests/**/*.spec.js"
    ]
  }
}