        function showSolutions(industry) {
            // Remove active class from all buttons
            document.querySelectorAll('.industry-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Add active class to clicked button
            event.target.closest('.industry-btn').classList.add('active');
            
            // Get solutions container
            const container = document.getElementById('solutions-container');
            
            // Generate HTML for solutions
            const data = industryData[industry];
            let html = `
                <div class="solutions-title" style="color: #FFA500; font-size: 1.8rem; margin-bottom: 1.5rem; text-align: center; text-transform: uppercase; letter-spacing: 0.05em;">
                    ${data.title}
                </div>
            `;
            
            data.solutions.forEach(solution => {
                html += `
                    <div class="solution-item">
                        <div class="solution-title">${solution.title}</div>
                        <div class="solution-desc">${solution.description}</div>
                        <ul class="solution-benefits">
                            ${solution.benefits.map(benefit => `<li>${benefit}</li>`).join('')}
                        </ul>
                    </div>
                `;
            });
            
            container.innerHTML = html;
            container.classList.add('show');
        }

